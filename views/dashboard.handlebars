<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <!-- Include your CSS and other necessary head elements -->
</head>
<body>
    <h1>Your Dashboard</h1>

    <!-- Option to add a new post -->
    <button><a href="/dashboard/new">Add New Post</a></button>

    {{#each posts}}
        <div class="post">
            <h3>{{this.title}}</h3>
            <p>{{this.content}}</p>

            <div class="post-actions">
                <!-- Edit Button -->
                <form action="/dashboard/edit/{{this.id}}" method="GET">
                    <button type="submit" class="button-style">Edit</button>
                </form>

                <!-- Delete Button -->
                <form action="/dashboard/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="button-style">Delete</button>
                </form>
            </div>
        </div>
    {{else}}
        <p>You haven't created any posts yet.</p>
    {{/each}}

    <!-- Include logout button/link -->
    <button><a href="/api/users/logout">Logout</a></button>
</body>
</html>

