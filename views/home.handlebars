<!DOCTYPE html>
<html>
<head>
    <title>Home - Tech Blog</title>
    <!-- Include your CSS and other necessary head elements -->
</head>
<body>
    <h1>Welcome to the Tech Blog</h1>

    {{#each posts}}
        <div class="post">
            <h2><a href="/post/{{this.id}}" class="post-link">{{this.title}}</a></h2>
            <p>{{this.content}}</p>
            <p>Posted by {{this.user.username}} on {{formatDate this.createdAt}}</p>
        </div>
    {{else}}
        <p>No posts to display.</p>
    {{/each}}

    <!-- Navigation links or buttons for login/signup if the user is not logged in -->
    {{#unless logged_in}}
        <button><a href="/login">Login</a></button>
        <button><a href="/signup">Sign Up</a></button>
    {{/unless}}

    <!-- JavaScript for Handling Click Events on Posts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const postLinks = document.querySelectorAll('.post-link');

            postLinks.forEach(link => {
                link.addEventListener('click', function(event) {
                    {{#unless logged_in}}
                    event.preventDefault(); // Prevent the default link behavior
                    alert('Please login or signup to continue further!');
                    {{/unless}}
                });
            });
        });
    </script>
</body>
</html>
