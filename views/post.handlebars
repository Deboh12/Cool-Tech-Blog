<!DOCTYPE html>
<html>
<head>
    <title>{{post.title}}</title>
    <!-- Include your CSS and other necessary head elements -->
</head>
<body>
    <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <p>Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
    </div>

    <!-- Comments Section -->
    <div class="comments">
        <h3>Comments:</h3>
        {{#each post.comments}}
            <div class="comment">
                <p>{{this.comment_text}} - by {{this.user.username}} on {{formatDate this.createdAt}}</p>
            </div>
        {{else}}
            <p>No comments yet.</p>
        {{/each}}
    </div>

    <!-- Comment Submission Form -->
    {{#if logged_in}}
        <form id="comment-form">
            <input type="hidden" id="post-id" name="post_id" value="{{post.id}}">
            <textarea id="comment-text" name="comment_text" placeholder="Leave a comment..." required></textarea>
            <button type="submit">Submit Comment</button>
        </form>
    {{/if}}

    <!-- Include navigation back to home or other parts of the site -->
    <button><a href="/">Back to Home</a></button>

    <!-- Correct path to your JavaScript file -->
    <script src="/assets/js/app.js"></script>
</body>
</html>